<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etCorreoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@drawable/edittext_rounded"
        android:hint="Correo"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hintGray" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etContrasenaLogin"
        android:backgroundTint="@drawable/edittext_rounded"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:hint="Contraseña"
        android:textColorHint="@color/hintGray"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00A3FF"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="@color/buttonText"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnGoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00A3FF"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="@color/buttonText"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="@color/buttonText"
        android:backgroundTint="@drawable/rounded_button"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/insulina" />
    </LinearLayout>

</LinearLayout>
